<%- include ('../public/page_header.ejs')%>

<div class="container-fluid">
    <div class="row">

        <div class="panel panel-default">
            <div class="panel-heading">
                增加管理员
            </div>
            <div class="panel-body">
                <div class="table-responsive input-form">
                    <form action="/<%=config.adminPath%>/manager/doAdd" method="post">
                        <ul>
                            <li> 管理员名称: <input type="text" name="username" /></li>
                            <hr>
                            <li> 管理员密码: <input type="password" name="password" /></li>
                            <hr>
                            <li> 管理员电话: <input type="text" name="mobile" /></li>
                            <hr>
                            <li> 管理员邮箱: <input type="text" name="email" /></li>
                            <hr>
                            <li> 管理员角色:

                              <select name="role_id" id="role_id">

                                <%for (var i=0;i<roleList.length;i++) {%>
                                    <option value="<%=roleList[i].role_id%>"><%=roleList[i].title%></option>                                   
                                <%}%>
                                
                                </select>

                                </li>
                                <hr>
                            <li>
                                <hr/>
                                <button type="submit" class="btn btn-default">提交</button>
                            </li>

                        </ul>


                    </form>
                </div>
            </div>


        </div>

    </div>
</div>

</body>
</html>